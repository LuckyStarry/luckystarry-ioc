{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "lib": ["es5", "es2015"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src"
  }
}
